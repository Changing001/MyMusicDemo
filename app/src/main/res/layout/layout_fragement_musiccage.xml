<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/image_fornow"
                android:src="@drawable/hugh"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <com.example.hp.mymusicdemo.class_image_and_text_button_hor
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/spebtn1"
                    android:layout_height="wrap_content">
                </com.example.hp.mymusicdemo.class_image_and_text_button_hor>

                <com.example.hp.mymusicdemo.class_image_and_text_button_hor
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/spebtn2"
                    android:layout_height="wrap_content">
                </com.example.hp.mymusicdemo.class_image_and_text_button_hor>

                <com.example.hp.mymusicdemo.class_image_and_text_button_hor
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/spebtn3"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                </com.example.hp.mymusicdemo.class_image_and_text_button_hor>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.hp.mymusicdemo.class_image_and_text_button_hor
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/spebtn4"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                </com.example.hp.mymusicdemo.class_image_and_text_button_hor>

                <com.example.hp.mymusicdemo.class_image_and_text_button_hor
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/spebtn5"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                </com.example.hp.mymusicdemo.class_image_and_text_button_hor>

                <com.example.hp.mymusicdemo.class_image_and_text_button_hor
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/spebtn6"
                    android:gravity="center"
                    android:layout_height="wrap_content">


                </com.example.hp.mymusicdemo.class_image_and_text_button_hor>

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:paddingTop="3dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="歌单推荐"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.example.hp.mymusicdemo.class_image_and_text_button
                    android:layout_width="0dp"
                    android:id="@+id/spebtn7"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </com.example.hp.mymusicdemo.class_image_and_text_button>

                <com.example.hp.mymusicdemo.class_image_and_text_button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/spebtn8"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </com.example.hp.mymusicdemo.class_image_and_text_button>

                <com.example.hp.mymusicdemo.class_image_and_text_button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/spebtn9"
                    android:layout_height="match_parent">
                </com.example.hp.mymusicdemo.class_image_and_text_button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.example.hp.mymusicdemo.class_image_and_text_button
                    android:layout_width="0dp"
                    android:id="@+id/spebtn10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </com.example.hp.mymusicdemo.class_image_and_text_button>

                <com.example.hp.mymusicdemo.class_image_and_text_button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/spebtn11"
                    android:gravity="center"
                    android:layout_height="match_parent">
                </com.example.hp.mymusicdemo.class_image_and_text_button>

                <com.example.hp.mymusicdemo.class_image_and_text_button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/spebtn12"
                    android:layout_height="match_parent">


                </com.example.hp.mymusicdemo.class_image_and_text_button>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
