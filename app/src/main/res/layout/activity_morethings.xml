<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.mymusicdemo.activity_mylikesongs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back" />


            <TextView
                android:id="@+id/textView_titletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="更多精彩"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />



            <Button
                android:id="@+id/btn_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/morelike" />

        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.example.hp.mymusicdemo.class_image_and_text_button
                        android:id="@+id/spebtn_more_1"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                    </com.example.hp.mymusicdemo.class_image_and_text_button>

                    <com.example.hp.mymusicdemo.class_image_and_text_button
                        android:id="@+id/spebtn_more_2"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                    </com.example.hp.mymusicdemo.class_image_and_text_button>
                    <com.example.hp.mymusicdemo.class_image_and_text_button
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                    </com.example.hp.mymusicdemo.class_image_and_text_button>
                    <com.example.hp.mymusicdemo.class_image_and_text_button
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                    </com.example.hp.mymusicdemo.class_image_and_text_button>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>
